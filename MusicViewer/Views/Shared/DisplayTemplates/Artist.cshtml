@using MusicViewer.Models
@model MusicViewer.Models.Artist

<div class="row">
    <div class="col-xs-6">
        <div class="form-group row">
            @Html.LabelFor(m => m.Name, new { @class = "col-xs-4 control-label" })
            <div class="col-xs-8">
                @Html.DisplayFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="col-xs-6">
        <img src="~/Images/missing_artist.png" class="img-thumbnail" />
    </div>
</div>
<br />
<div class="row">
    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Albums by @Model.Name
            </div>
            <div class="panel-body">
                <div class="container-fluid">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Album</th>
                                <th>Year</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Album a in Model.Albums)
                            {
                                <tr>
                                    <td>@Html.ActionLink(a.Name, "Get", "Album", new { id = a.Id }, null)</td>
                                    <td>@a.Year</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

