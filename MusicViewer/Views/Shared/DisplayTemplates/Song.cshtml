@model MusicViewer.Models.Song

<div class="row">
    <div class="col-xs-12">
        <div class="col-xs-6">
            <div class="form-group row">
                @Html.LabelFor(m => m.Title, new { @class = "form-label col-xs-4" })
                <div class="col-xs-6">
                    @Html.DisplayFor(m => m.Title, new { @class = "form-control" })
                </div>
            </div> 
            <div class="form-group row">
                @Html.LabelFor(m => m.Artist.Name, new { @class = "form-label col-xs-4" })
                <div class="col-xs-6">
                    @Html.ActionLink(Model.Artist.Name, "Get", "Artist", new { id = Model.Artist.Id }, null)
                </div>
            </div> 
            <div class="form-group row">
                @Html.LabelFor(m => m.Album.Name, new { @class = "form-label col-xs-4" })
                <div class="col-xs-6">
                    @Html.ActionLink(Model.Album.Name, "Get", "Album", new { id = Model.Album.Id }, null)
                </div>
            </div> 
            <div class="form-group row">
                @Html.LabelFor(m => m.Album.Year, new { @class = "form-label col-xs-4" })
                <div class="col-xs-6">
                    @Html.DisplayFor(m => m.Album.Year, new { @class = "form-control" })
                </div>
            </div> 
        </div>
        <div class="col-xs-6">
            <img src="~/Images/default_album.png" class="img-thumbnail"/>
        </div>
    </div>
</div>
